<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/themeColor"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/satisfaction"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/intro3_heading"/>

    <TextView
        android:id="@+id/intro3_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/work_sans_extra_bold_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Your satisfaction\nis our topmost\npriority."/>

    <TextView
        android:id="@+id/subtext3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/work_sans_regular"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/intro3_heading"
        android:textColor="@color/white"
        android:lineSpacingExtra="6dp"
        app:layout_constraintStart_toStartOf="@id/intro3_heading"
        app:layout_constraintEnd_toEndOf="@id/intro3_heading"
        android:text="Get to know the real time updates about your vehicle on your fingertips."/>

    <TextView
        android:padding="12dp"
        android:id="@+id/get_started"
        android:elevation="0dp"
        android:onClick="passToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#EC8989"
        android:background="@drawable/button_bg"
        android:text="GET STARTED"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/subtext3"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>