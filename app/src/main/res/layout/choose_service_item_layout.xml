<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/upper_service_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/service_select"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="#F3ECEC"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/service_select_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/car"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/service_name_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/service_select">

            <TextView
                android:id="@+id/ServiceName"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ServiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />
            <TextView
                android:id="@+id/ServiceWarrenty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warrenty" />


        </LinearLayout>

        <TextView
            android:id="@+id/service_item_price"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/teal_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="â‚¹2300"/>
    </RelativeLayout>


</RelativeLayout>